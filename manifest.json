{
	"manifest_version": 2,
	"author": "Douglas Vinicius",
	"name": "YouOrg",
	"description": "TODO",
	"version": "0.1",

	"browser_specific_settings":
	{
		"gecko":
		{
			"id": "youorg@douglas.vinis"
		}
	},

	"permissions":
	[
		"*://*.youtube.com/*",
		"tabs",
		"storage"
	],
	"web_accessible_resources":
	[
		"data/gear.svg",
		"data/group_add.svg",
		"data/close.svg"
	],

	"browser_action":
	{
		"default_title": "Open YouOrg tab"
	},
	"background":
	{
		"scripts": ["src/youorg.js"]
	},
	"content_scripts":
	[
		{
			"matches": ["*://*.youtube.com/*"],
			"js": ["src/youtube_mod.js"]
		}
	]
}
